<?xml version="1.0" encoding="utf-8"?><androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".view.MainActivity"    android:background="@color/light3_orange"    >    <com.yandex.mobile.ads.banner.BannerAdView        android:id="@+id/adViewYandex"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <ScrollView        android:layout_marginTop="50dp"        android:layout_width="match_parent"        android:layout_height="match_parent">    <LinearLayout        android:layout_gravity="center"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center_horizontal"        android:orientation="vertical"        android:layout_marginBottom="20dp"        >        <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"            android:layout_marginBottom="5dp">        <ImageView            android:id="@+id/arrow_left"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintBottom_toBottomOf="parent"            android:layout_width="20dp"            android:layout_height="match_parent"            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>        <com.google.android.material.textview.MaterialTextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/main_title_text_choose"            android:textStyle="bold"            android:textColor="@color/black"            android:textSize="25sp"            android:layout_marginBottom="10dp"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintEnd_toStartOf="@id/arrow_right"            app:layout_constraintStart_toEndOf="@id/arrow_left"            />    <ImageView            android:id="@+id/arrow_right"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintBottom_toBottomOf="parent"            android:layout_width="20dp"            android:layout_height="match_parent"            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>    </androidx.constraintlayout.widget.ConstraintLayout>        <androidx.recyclerview.widget.RecyclerView            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintStart_toEndOf="@id/arrow_left"            app:layout_constraintEnd_toStartOf="@id/arrow_right"            app:layout_constraintBottom_toBottomOf="parent"            android:orientation="horizontal"            android:id="@+id/rcView_TopSelector"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:scrollbars="horizontal"            android:scrollbarStyle="insideInset"            android:fadeScrollbars="true"            android:scrollIndicators="top"            android:scrollbarThumbHorizontal="@color/light_orange"            android:scrollbarFadeDuration="0"/>    </LinearLayout>    </ScrollView>    <androidx.coordinatorlayout.widget.CoordinatorLayout        android:background="@drawable/bg_bottom_sheets"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:id="@+id/main_bottom_sheets"        android:elevation="20dp"        style="?attr/bottomSheetStyle"        app:behavior_hideable="true"        app:behavior_peekHeight="35dp"        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"        android:layout_gravity="end">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center"            android:orientation="vertical">            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/bottomsheet_oval_swiper"                android:layout_marginVertical="10dp"/>            <FrameLayout                android:id="@+id/bottom_sheet_frame"                android:layout_width="match_parent"                android:layout_height="match_parent"/>        </LinearLayout>    </androidx.coordinatorlayout.widget.CoordinatorLayout></androidx.coordinatorlayout.widget.CoordinatorLayout>